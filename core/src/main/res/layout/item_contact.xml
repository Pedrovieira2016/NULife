<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="contact"
            type="com.naltynbekkz.core.Contact" />
    </data>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/background_transparent_button"
        android:drawablePadding="16dp"
        android:foreground="?android:selectableItemBackground"
        android:gravity="start|center_vertical"
        android:paddingHorizontal="16dp"
        android:text="@{contact.data}"
        android:textColor="@color/text_muted"
        android:textSize="17sp"
        android:fontFamily="@font/source_sans_pro"
        app:setIcon="@{contact.getIcon()}"
        tools:drawableStart="@drawable/ic_vk"
        tools:text="vk.me/naltynbekkz" />
</layout>