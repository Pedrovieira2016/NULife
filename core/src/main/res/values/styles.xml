<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:statusBarColor">#B3FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#B3FFFFFF</item>
    </style>

    <style name="Widget.Style.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.Style.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="Widget.Style.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Style.Tab</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="TextAppearance.Style.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/icon_muted</item>
        <item name="colorControlActivated">@color/rating</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="backgroundTint">@color/button_background</item>
        <item name="android:textAppearance">@style/MainColorBold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="backgroundTint">@color/button_background</item>
        <item name="android:textAppearance">@style/MainColorBold</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="DangerButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="backgroundTint">@color/button_background</item>
        <item name="android:textAppearance">@style/MainColorBold</item>
        <item name="android:textColor">@color/danger</item>
    </style>

    <style name="TextAppearance.Design.CollapsingToolbar.Expanded" parent="BlackText">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
    </style>

